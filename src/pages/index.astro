---
import { Globe } from "../components/globe";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Olópò Studio">
  <div class="bg-orange-500 h-dvh text-orange-50 py-4 flex flex-col">
    <div class="fixed inset-0 flex items-center justify-center pointer-events-none">
      <div class="w-px h-full border-orange-300/90 border-[1px] -translate-x-1/2 fixed inset-y-0">
      </div>
      <div class="h-px w-full border-orange-300/90 border-[1px] -translate-y-1/2 fixed inset-x-0">
      </div>
      <div class="border rounded-full border-orange-300/90">
        <Globe client:load />
      </div>
    </div>

    <main class="grid grid-rows-2 gap-20 grow items-start justify-center z-10 relative pt-10">
      <div class="flex items-center gap-4 px-4 w-full self-end pb-10">
        <div class="flex flex-col gap-0">
          <h1 class="text-[5vw] leading-snug tracking-wide font-light capitalize">
            <span class="font-sans -ml-2">olópò studio</span>
          </h1>
          <p class="text-lg">
            An experimental creative studio with aesthetic minimalism at its core.
          </p>
          <!-- <p> Olópò is a Yoruba word that translates to 'catering company' in English. </p> -->
        </div>
      </div>

      <div class="flex justify-between">
        <section class="flex flex-col gap-4 px-4">
          <div class="grid grid-cols-2 gap-10">
            <div class="flex flex-col gap-2">
              <div class="flex gap-2 items-center">
                <h3 class="text-2xl">💌 Innkeeper</h3>
                <span
                  class="border border-orange-200 text-white backdrop-blur-sm border-opacity-50 bg-white bg-opacity-20 px-2 rounded-full text-xs uppercase"
                  >beta</span
                >
              </div>
              <p class="text-lg">
                AI powered shadow work journaling app based on Carl Jung's work, sends daily
                personalized prompts via email, and you can respond directly by email or use the web
                app.
              </p>
            </div>

            <div class="flex flex-col gap-2">
              <div class="flex items-center gap-2">
                <h3 class="text-2xl">🍪 InvoiceDeck</h3>
                <span
                  class="border border-orange-200 text-white border-opacity-50 bg-white bg-opacity-20 px-2 backdrop-blur-sm rounded-full text-xs uppercase"
                  >coming soon</span
                >
              </div>
              <p class="text-lg">
                The best invoice generator you've ever used. Smooth as butter, no sign up required,
                and works offline.
              </p>
            </div>
          </div>
        </section>
      </div>
    </main>
    <footer class="flex items-start justify-between mt-auto px-4">
      <li class="flex flex-row gap-4 text-xs uppercase">
        <a href="mailto:contact@olopo.studio" class="hover:text-yellow-300 duration-200">Contact</a>
        <a href="/privacy-policy" class="">Privacy Policy</a>
        <a href="/terms-of-service" class="">Terms of Service</a>
      </li>

      <!-- <div
        class="bg-white bg-opacity-10 backdrop-blur-sm border rounded-md border-orange-50 px-4 py-4 rounded-0 border-opacity-20 flex flex-col gap-2"
      >
        <p class="text-lg">Keep up with Olópò</p>
        <form class="flex gap-0">
          <input
            type="email"
            class="border px-2 py-2 rounded-l-md bg-orange-500"
          />
          <button
            class="bg-white text-orange-500 px-4 py-1 uppercase rounded-r-md"
            >Submit</button
          >
        </form>
      </div> -->
    </footer>
  </div>
</Layout>
